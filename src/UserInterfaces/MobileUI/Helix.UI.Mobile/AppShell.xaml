       xmlns:fontAwesome="clr-namespace:Helix.UI.Mobile.Helpers.FontAwesomeHelper"
       Shell.FlyoutBehavior="Flyout">

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <StackLayout Padding="20"
                         HeightRequest="150"
                         VerticalOptions="Center"
                         Spacing="20">

                <Grid RowDefinitions="Auto,Auto"
                      ColumnDefinitions="Auto,*"
                      Padding="10"
                      ColumnSpacing="15">

                    <toolkit:AvatarView Grid.Row="0"
                                        Grid.Column="0"
                                        Grid.RowSpan="2"
                                        StrokeThickness="2"
                                        HeightRequest="70"
                                        WidthRequest="70"
                                        CornerRadius="35"
                                        ImageSource="user.svg"
                                        HorizontalOptions="Start" />

                    <Label Grid.Row="0"
                           Grid.Column="1"
                           Text="Volkan Sunuk"
                           FontAttributes="Bold"
                           FontSize="Subtitle"
                           FontFamily="Roboto"
                           VerticalOptions="End" />

                    <Label Grid.Row="1"
                           Grid.Column="1"
                           Text="Paketleme"
                           FontSize="Small"
                           FontFamily="Roboto"
                           TextColor="{StaticResource Gray400}"
                           VerticalOptions="Start" />

                </Grid>

                <BoxView HeightRequest="1"
                         Opacity="0.5"
                         Color="{StaticResource Primary}" />
            </StackLayout>

        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <Shell.ItemTemplate>
        <DataTemplate>

            <Grid ColumnDefinitions="Auto,Auto,*"
                  ColumnSpacing="10"
                  Padding="15"
                  VerticalOptions="CenterAndExpand">

                <Image Grid.Column="0"
                       Aspect="AspectFill"
                       Source="{Binding Icon}"
                       HeightRequest="20"
                       WidthRequest="20">
                    <Image.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="{StaticResource Primary}" />
                    </Image.Behaviors>

                </Image>

                <Label Grid.Column="1"
                       Text="{Binding Title}"
                       FontSize="Subtitle"
                       HorizontalOptions="StartAndExpand" />

            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

