    <Shell.FlyoutFooterTemplate>
        <DataTemplate>
            <StackLayout Padding="20"
                         VerticalOptions="End"
                         Spacing="20">

                <Button Text="Oturumu Kapat"
                        
                        BackgroundColor="{StaticResource Danger}" />

                <Label Text="Copyright İyibir Yazılım ve Teknoloji 2023"
                       FontSize="Micro"
