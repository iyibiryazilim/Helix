<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Helix.UI.Mobile.Modules.SalesModule.Views.OperationsViews.SalesProductByCustomerViews.SalesProductView"
             Title="SalesProductView">
    <VerticalStackLayout VerticalOptions="Center" Padding="10" Spacing="15">
        <Border >
            <Label Text="Müşteriye Göre" />


            <Border.GestureRecognizers>
                <TapGestureRecognizer CommandParameter="{Binding .}"
                                      Command="{Binding GoToSalesProductViewCommand}" />

            </Border.GestureRecognizers>
        </Border>
        <Label Text="Ürüne Göre" />
        <Border >
            
            <Border.GestureRecognizers>
                <TapGestureRecognizer CommandParameter="{Binding .}"
                                      Command="{Binding GoToSalesProductViewCommand}" />

            </Border.GestureRecognizers>
        </Border>
       
    </VerticalStackLayout>
</ContentPage>