<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Helix.UI.Mobile.Modules.SalesModule.Views.OperationsViews.SalesProductByCustomerViews.ProcurementOptionView"
             Title="ProcurementOptionView">
    <VerticalStackLayout>
        <Border>
            <Label Text="Müşteriye Göre"></Label>
            <Border.GestureRecognizers>
                <TapGestureRecognizer CommandParameter="{Binding .}"
                                      Command="{Binding GoToSalesProductViewCommand}" />

            </Border.GestureRecognizers>
        </Border>
        <Border>
            <Label Text="Ürüne Göre"></Label>
        </Border>

    </VerticalStackLayout>
</ContentPage>