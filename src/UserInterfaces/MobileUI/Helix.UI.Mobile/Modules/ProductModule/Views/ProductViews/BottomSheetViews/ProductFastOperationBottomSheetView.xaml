                    </Border>

                    <Label Grid.Column="1"
                           FontSize="16"
                           HorizontalOptions="Start"
                           Text="Ambar Parametreleri"
                           VerticalOptions="Center" />
                    <!--<Label FontSize="12"
                   LineBreakMode="TailTruncation"
                   Text="Malzemenin ambar parametrelerini görebilirsiniz." />-->
                </Grid>
