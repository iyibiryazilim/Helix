<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fontAwesome="clr-namespace:Helix.UI.Mobile.Helpers.FontAwesomeHelper"
             x:Class="Helix.UI.Mobile.Modules.BaseModule.SharedViews.ProductTransactionOperationFormContentView"
             x:Name="this"
             xmlns:viewModel="clr-namespace:Helix.UI.Mobile.Modules.ProductModule.ViewModels.OperationsViewModels">
    <Border BackgroundColor="{StaticResource WhiteSmoke}"
            StrokeThickness="0"
            Padding="5,20,5,10">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="20,20,0,0" />
        </Border.StrokeShape>
        <Grid  Grid.RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
               BackgroundColor="{StaticResource WhiteSmoke}">

            <!-- Fiş Türü -->
            <VerticalStackLayout Grid.Row="0"
                                 Padding="7">
                <Label Text="Fiş Türü"
                       FontSize="Medium" />
                <Border StrokeShape="RoundRectangle 15">
                    <Entry Placeholder="{Binding Source={x:Reference this},Path=TransactionTypeName}" IsEnabled="False"/>
                </Border>
            </VerticalStackLayout>

            <!-- Tarih ve Saat -->
            <Grid Grid.Row="1"
                  Grid.ColumnDefinitions="50*,50*"
                  Padding="7"
                  ColumnSpacing="5">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="Tarih"
                           FontSize="Medium" />
                    <Border StrokeShape="RoundRectangle 15">
                        <DatePicker />
                    </Border>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1">
                    <Label Text="Saat"
                           FontSize="Medium" />
                    <Border StrokeShape="RoundRectangle 15">
                        <TimePicker  />
                    </Border>
                </VerticalStackLayout>

            </Grid>

            <!-- Ambar -->
            <VerticalStackLayout Grid.Row="2"
                                 Padding="7">
                <Label Text="Ambar"
                       FontSize="Medium" />
                <Border StrokeShape="RoundRectangle 15">
                    <Picker x:Name="pickerWarehouse"
                            Title="Seçiniz.."
                            ItemDisplayBinding="{Binding Name}"
                            ItemsSource="{Binding Source={x:Reference this},Path=WarehouseList}"
                             />

                </Border>
            </VerticalStackLayout>

            <!-- Belge Kodu -->
            <VerticalStackLayout Grid.Row="3"
                                 Padding="7">
                <Label Text="Belge Kodu"
                       FontSize="Medium" />
                <Border StrokeShape="RoundRectangle 15">
                    <Entry Placeholder="  Belge Kodu Giriniz" />

                </Border>
            </VerticalStackLayout>

            <!-- Özel Kod -->
            <VerticalStackLayout Grid.Row="4"
                                 Padding="7">
                <Label Text="Özel Kod"
                       FontSize="Medium" />
                <Border StrokeShape="RoundRectangle 15">
                    <Grid ColumnDefinitions="85*,15*">
                        <Entry Grid.Column="0"
                               Placeholder="  Özel Kod Giriniz" />
                        <ImageButton Grid.Column="1"
                                     BackgroundColor="Transparent"
                                     Aspect="AspectFit"
                                     HeightRequest="22"
                                     WidthRequest="22">
                            <ImageButton.Source>
                                <FontImageSource FontFamily="FAS"
                                                 Glyph="{x:Static fontAwesome:FontAwesomeIcons.Bars}"
                                                 Color="{StaticResource DarkPrimary}" />
                            </ImageButton.Source>
                        </ImageButton>

                    </Grid>
                </Border>
            </VerticalStackLayout>

            <!-- Doküman İzleme No -->
            <VerticalStackLayout Grid.Row="5"
                                 Padding="7">
                <Label Text="Doküman İzleme No"
                       FontSize="Medium" />
                <Border StrokeShape="RoundRectangle 15">
                    <Entry Placeholder="  Doküman İzleme No Giriniz" />
                </Border>
            </VerticalStackLayout>

            <!-- Açıklama -->
            <VerticalStackLayout Grid.Row="6"
                                 Padding="7">
                <Label Text="Açıklama"
                       FontSize="Medium" />
                <Border StrokeShape="RoundRectangle 15">
                    <Entry Placeholder="  Açıklama" />
                </Border>
            </VerticalStackLayout>

            <Button Grid.Row="7"
                    Margin="10,70"
                    Text="Kaydet"></Button>


        </Grid>
    </Border>
</ContentView>
