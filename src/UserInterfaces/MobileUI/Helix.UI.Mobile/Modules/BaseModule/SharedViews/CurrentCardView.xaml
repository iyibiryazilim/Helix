<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="Helix.UI.Mobile.Modules.BaseModule.SharedViews.CurrentCardView">
    <Border BackgroundColor="Red">
        <Grid ColumnDefinitions=".3*,*">
            <Grid Grid.Column="0"
                  BackgroundColor="Blue"
                  Padding="5">
                <Frame IsClippedToBounds="True"></Frame>
            </Grid>
            <Grid Grid.Column="1">
                <VerticalStackLayout VerticalOptions="Center"
                                     Spacing="5"
                                     Padding="10">
                    <Label Text="{Binding Source={x:Reference this},Path=Current.Name}"></Label>
                    <Label Text="{Binding Source={x:Reference this},Path=Current.Code}"></Label>
                </VerticalStackLayout>
            </Grid>
        </Grid>
    </Border>
</ContentView>
