<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Name="this"
             xmlns:fontAwesome="clr-namespace:Helix.UI.Mobile.Helpers.FontAwesomeHelper"
             xmlns:viewModel="clr-namespace:Helix.UI.Mobile.Modules.BaseModule.SharedViewModel"
             xmlns:baseModel="clr-namespace:Helix.UI.Mobile.Modules.ProductModule.Models"
             x:DataType="viewModel:ProductTransactionContentViewModel"
             x:Class="Helix.UI.Mobile.Modules.BaseModule.SharedViews.ProductTransactionContentView">
    <Border BackgroundColor="{StaticResource WhiteSmoke}"
            StrokeThickness="0"
            Margin="0,30,0,0">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="20,20,0,0" />
        </Border.StrokeShape>
        <Grid RowDefinitions="10*,80*,10*">
            <Grid Grid.Row="0">
                <Border StrokeShape="RoundRectangle 20">

                    <Grid ColumnDefinitions=".15*,.70*,.15*">
                        <ImageButton Grid.Column="0"
                                     BackgroundColor="Transparent"
                                     Aspect="AspectFit"
                                     HeightRequest="22"
                                     WidthRequest="22">
                            <ImageButton.Source>
                                <FontImageSource FontFamily="FAS"
                                                 Glyph="{x:Static fontAwesome:FontAwesomeIcons.Barcode}"
                                                 Color="{StaticResource DarkPrimary}" />
                            </ImageButton.Source>
                        </ImageButton>
                        <SearchBar Grid.Column="1">


                        </SearchBar>

                        <ImageButton Grid.Column="2"
                                     BackgroundColor="Transparent"
                                     Aspect="AspectFit"
                                     HeightRequest="22"
                                     WidthRequest="22"
                                     Command="{Binding Source={x:Reference this},Path=BindingContext.GoToSharedProductListCommand}">
                            <ImageButton.Source>
                                <FontImageSource FontFamily="FAS"
                                                 Glyph="{x:Static fontAwesome:FontAwesomeIcons.Bars}"
                                                 Color="{StaticResource DarkPrimary}" />
                            </ImageButton.Source>
                        </ImageButton>


                    </Grid>

                </Border>

            </Grid>
            <Grid Grid.Row="1">
                <Frame Grid.Row="1"
                       Margin="10">
                    <CollectionView ItemsSource="{Binding Source={x:Reference this},Path=ProductModelList}"
                                    SelectionMode="None" >
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="baseModel:ProductModel" >
                                <StackLayout Padding="3">
                                    <SwipeView Margin="3"
                                               Threshold="200">
                                        <SwipeView.RightItems>
                                            <SwipeItems Mode="Execute">
                                                <SwipeItem BackgroundColor="{StaticResource Primary}"
                                                           CommandParameter="{Binding .}"
                                                           Command="{Binding Source={x:Reference this}, Path=BindingContext.RemoveItemCommand}"
                                                           Text="Malzeme Sil" />
                                            </SwipeItems>
                                        </SwipeView.RightItems>

                                        <Frame Padding="0"
                                               CornerRadius="10"
                                               HasShadow="False" HeightRequest="80">
                                            
                                            <Grid Padding="10"
                                                  ColumnDefinitions="15*,60*,20*" 
                                                  ColumnSpacing="15"
                                                  RowDefinitions="*,*"
                                                  RowSpacing="1">

                                                <Image Grid.Row="0"
                                                       Grid.RowSpan="2"
                                                       Grid.Column="0"
                                                       Aspect="AspectFill"
                                                       HeightRequest="30"
                                                      
                                                       WidthRequest="30">
                                                <Image.Source>
                                                    <FontImageSource FontFamily="FAS"
                                                                     Glyph="{x:Static fontAwesome:FontAwesomeIcons.Box}"
                                                                     Color="{StaticResource DarkPrimary}" />
                                                </Image.Source>

                                            </Image>

                                                <Label Grid.Row="0"
                                                       Grid.Column="1"
                                                       FontAttributes="Bold"
                                                       FontSize="Default"
                                                       HorizontalOptions="Start"
                                                   LineBreakMode="TailTruncation"
                                                   Text="{Binding Code}"
                                                       VerticalOptions="End" />

                                                <Label Grid.Row="1"
                                                       Grid.Column="1"
                                                       FontSize="12"
                                                       HorizontalOptions="Start"
                                                   LineBreakMode="TailTruncation"
                                                   Text="{Binding Name}"
                                                       VerticalOptions="Start" />

                                                <Frame Grid.Column="2"
                                                       CornerRadius="10"
                                                       Grid.Row="0" Padding="0"
                                                        Grid.RowSpan="2"  WidthRequest="35">
                                                    <Grid RowDefinitions=".30*,.40*,.30*">


                                                       
                                                            <ImageButton Grid.Row="0"
                                                                         BackgroundColor="Transparent"
                                                                         Aspect="AspectFit"
                                                                         HeightRequest="12"
                                                                         WidthRequest="12"
                                                                     >
                                                                <ImageButton.Source>
                                                                    <FontImageSource FontFamily="FAS"
                                                                                     Glyph="{x:Static fontAwesome:FontAwesomeIcons.Plus}"
                                                                                     Color="{StaticResource Success}" />
                                                                </ImageButton.Source>
                                                            </ImageButton>
                                                        
                                                        <Label Text="{Binding Quantity}"
                                                              
                                                               Grid.Row="1"
                                                               HorizontalOptions="Center">

                                                        </Label>

                                                        <ImageButton Grid.Row="2"
                                                                     BackgroundColor="Transparent"
                                                                     Aspect="AspectFit"
                                                                     HeightRequest="12"
                                                                     WidthRequest="12">
                                                            <ImageButton.Source>
                                                                <FontImageSource FontFamily="FAS"
                                                                                 Glyph="{x:Static fontAwesome:FontAwesomeIcons.Minus}"
                                                                                 Color="{StaticResource Danger}" />
                                                            </ImageButton.Source>
                                                        </ImageButton>
                                                    </Grid>
                                                    
                                                  
                                                </Frame>

                                            </Grid>

                                        </Frame>


                                    </SwipeView>
                                </StackLayout>

                            </DataTemplate>

                        </CollectionView.ItemTemplate>

                    </CollectionView>

                    <CollectionView ItemsSource="{Binding Source={x:Reference this},Path=ProductModelList}"
                                    SelectionMode="None" >
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="baseModel:ProductModel" >
                                <StackLayout Padding="3">
                                    <SwipeView Margin="3"
                                               Threshold="200">
                                        <SwipeView.RightItems>
                                            <SwipeItems Mode="Execute">
                                                <SwipeItem BackgroundColor="{StaticResource Primary}"
                                                           CommandParameter="{Binding .}"
                                                           Command="{Binding Source={x:Reference this}, Path=BindingContext.RemoveItemCommand}"
                                                           Text="Malzeme Sil" />
                                            </SwipeItems>
                                        </SwipeView.RightItems>

                                        <Frame Padding="0"
                                               CornerRadius="10"
                                               HasShadow="False" HeightRequest="80">
                                            
                                            <Grid Padding="10"
                                                  ColumnDefinitions="15*,60*,20*" 
                                                  ColumnSpacing="15"
                                                  RowDefinitions="*,*"
                                                  RowSpacing="1">

                                                <Image Grid.Row="0"
                                                       Grid.RowSpan="2"
                                                       Grid.Column="0"
                                                       Aspect="AspectFill"
                                                       HeightRequest="30"
                                                      
                                                       WidthRequest="30">
                                                <Image.Source>
                                                    <FontImageSource FontFamily="FAS"
                                                                     Glyph="{x:Static fontAwesome:FontAwesomeIcons.Box}"
                                                                     Color="{StaticResource DarkPrimary}" />
                                                </Image.Source>

                                            </Image>

                                                <Label Grid.Row="0"
                                                       Grid.Column="1"
                                                       FontAttributes="Bold"
                                                       FontSize="Default"
                                                       HorizontalOptions="Start"
                                                   LineBreakMode="TailTruncation"
                                                   Text="{Binding Code}"
                                                       VerticalOptions="End" />

                                                <Label Grid.Row="1"
                                                       Grid.Column="1"
                                                       FontSize="12"
                                                       HorizontalOptions="Start"
                                                   LineBreakMode="TailTruncation"
                                                   Text="{Binding Name}"
                                                       VerticalOptions="Start" />

                                                <Frame Grid.Column="2"
                                                       CornerRadius="10"
                                                       Grid.Row="0" Padding="0"
                                                        Grid.RowSpan="2"  WidthRequest="35">
                                                    <Grid RowDefinitions=".30*,.40*,.30*">


                                                       
                                                            <ImageButton Grid.Row="0"
                                                                         BackgroundColor="Transparent"
                                                                         Aspect="AspectFit"
                                                                         HeightRequest="12"
                                                                         WidthRequest="12"
                                                                         
                                                                     >
                                                                <ImageButton.Source>
                                                                    <FontImageSource FontFamily="FAS"
                                                                                     Glyph="{x:Static fontAwesome:FontAwesomeIcons.Plus}"
                                                                                     Color="{StaticResource Success}" />
                                                                </ImageButton.Source>
                                                            </ImageButton>
                                                        
                                                        <Label Text="{Binding Quantity}"
                                                              
                                                               Grid.Row="1"
                                                               HorizontalOptions="Center">

                                                        </Label>

                                                        <ImageButton Grid.Row="2"
                                                                     BackgroundColor="Transparent"
                                                                     Aspect="AspectFit"
                                                                     HeightRequest="12"
                                                                     WidthRequest="12">
                                                            <ImageButton.Source>
                                                                <FontImageSource FontFamily="FAS"
                                                                                 Glyph="{x:Static fontAwesome:FontAwesomeIcons.Minus}"
                                                                                 Color="{StaticResource Danger}" />
                                                            </ImageButton.Source>
                                                        </ImageButton>
                                                    </Grid>
                                                    
                                                  
                                                </Frame>

                                            </Grid>

                                        </Frame>


                                    </SwipeView>
                                </StackLayout>

                            </DataTemplate>

                        </CollectionView.ItemTemplate>

                    </CollectionView>
>>>>>>> Stashed changes

                </Frame>

            </Grid>


            <Button Grid.Row="2"
                    Margin="10"
                    Text="Ä°leri"
                    VerticalOptions="End">

            </Button>
           

        </Grid>
    </Border>

</ContentView>
